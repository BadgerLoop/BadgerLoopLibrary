gpio mode 14 input
gpio write 14 0
echo "set SCLK (GPIO 11 / wPi 11) as OUTPUT (0)"
gpio mode 13 input
echo "set MISO (GPIO 9 / wPi 13) as input"
gpio mode 12 output
gpio write 12 0
echo "set MOSI (GPIO 10 / wPi 12) as OUTPUT (0)"
gpio mode 11 input
echo "set CE1 (GPIO 7 / wPi 11) as input"
gpio mode 10 output
gpio write 10 1
echo "set CE0 (GPIO 8 / wPi 10) as OUTPUT (1)"
